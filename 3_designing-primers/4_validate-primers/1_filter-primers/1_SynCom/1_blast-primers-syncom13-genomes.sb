#!/bin/bash

# Copy/paste this job script into a text file and submit with the command:
#    sbatch thefilename

#SBATCH --time=24:00:00   # walltime limit (HH:MM:SS)
#SBATCH --nodes=1   # number of nodes
#SBATCH --ntasks-per-node=36   # 36 processor core(s) per node 
#SBATCH --job-name="primers-syncom13-blast"
#SBATCH --mail-user=ngeerdes@iastate.edu   # email address
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --output="slurm-syncom13-blast.out" # job standard output file (%j replaced by job id)


# Define an array of isolate IDs 

isolates=("PvR021" "PvR079" "PvR083" "PvR122" "PvR147") 

# Loop through each isolate and execute the Python script 
for isolates in "${isolates[@]}" ; do 
    echo "Running BLAST for isolate: $isolates" 
    blastn -task blastn-short \
            -query "../../primers/primers-fasta/${isolates}.primers.fasta.renamed" \
            -db /work/adina/ngeerdes/databases/syncom13-genomes/syncom13/syncom13-db \
            -out "../../validation/syncom/blast-out/${isolates}.syncom.blast.out" \
            -outfmt 6 
done



